.clients  display: flex  flex-grow: 1  flex-direction: column  min-height: 657px  background-image: url(../img/clients.jpg)  height: 100vh  .clients-title    display: flex    align-items: center    justify-content: center    height 100px    min-height 80px    background-color rgba(45, 45, 45, 0.85)    .clients-title__container      display: flex      flex-direction row      align-items: center      justify-content: center      flex-grow 1      .clients-title__name        display flex        font-size 3rem        color white  .clients-all    display flex    justify-content: center    background-color: rgba(37, 37, 37, 0.55)    flex-grow: 1