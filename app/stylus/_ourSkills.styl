.our-skills
  display: flex
  flex-direction: column
  justify-content: space-around
  height: 100vh
  background-color: green
  &-title
    display: flex
    flex-direction: row
    align-items: center
    justify-content: center
    min-height: 80px
    flex-grow: 1
    background-color #424242
    &__name
      display: flex
      margin: 0 auto
      font-size 3rem
      color #f2f2f2
      text-transform: uppercase
  &-container
    display: flex
    flex-grow: 1
    min-height: 582px
    background-color: tomato
    justify-content: center
    align-items: flex-start
    &-work-quality
      display: flex
      flex-direction: column
      align-items: center
      flex-grow: 1
      &__title
        display: flex
        text-transform: uppercase
        font-size: 1.3rem
        color: #11b8cc
        flex-grow: 1
      &-container
        display: flex
        flex-direction: row
        align-self: stretch
        flex-grow: 1
        &__list
          display: flex
          flex-direction: row
          flex-grow: 1
          justify-content: space-around
          width: 500px
          &--item
            display: flex
            flex-direction: column
            align-items: center
            justify-content: center
            background-color: red
            height: 120px
            width: 120px
            overflow: hidden
            border-radius: 50%
            &__icon
              display: flex
              width: 120px
              align-items: center
              justify-content: center
              flex-grow: 2
            &__description
              display: flex
              justify-content: center
              align-items: center
              flex-grow: 1
              width: 120px
              background-color green