.header
  display: flex
  flex-grow: 1
  flex-direction: column
  height: 100vh
  background-color: red
  &-top-bar
    display: flex
    flex-direction: row
    justify-content: center
    background-color: #f2f2f2
    height: 46px
    &-logo
      display: flex
      &__img
        display: flex
        height: 46px
    &-nav
      display: flex
      justify-content: flex-end
      align-items: center
      flex-grow: 1
      &__list
        display: flex
        list-style-type: none
        flex-direction: row
        justify-content: space-between
        width: 450px
        text-transform: uppercase
        &--item a
          color: #313131
        &--item_selected a
          color: #313131
          font-weight: bold
  &-slider
    display: flex
    justify-content: center
    align-items: center
    flex-direction: column
    flex-wrap: wrap
    flex-grow: 1
    background: url(../img/people-coffee-tea-meeting.jpg)
    background-size: cover
    &-container
      display: flex
      flex-grow: 1
      flex-direction: column
      justify-content: space-around
      align-items: center
      flex-grow: 1
      &-title
        display: flex
        width: auto
        flex-grow: 1
        text-transform: uppercase
        font-size: 3rem
        color: #f2f2f2
      &-description
        display: flex
        flex-grow: 1
        text-transform: uppercase
        margin-bottom: 50px
        color: #f2f2f2
      &-form
        display: flex
        flex-grow: 1
        &__join-btn
          display: flex
        &__works-btn
          display: flex